@{
    ViewData["Title"] = "Home";
}

<main>
    <div class="header-section">
        <div class="container ">
            <div class="row">
                <div class="col header-content pt-5">
                    <h1>You Want It We Got It!!!</h1>
                </div>
                <div class="col text-center p-5">
                    <div class="new-account">
                        <h3 class="pt-3">Create a new account</h3>
                        @using (@Html.BeginForm("Signup", "Home", FormMethod.Post))
                        {
                            <div class="row m-3">
                                <label for="inputFullname" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputFullName" name="userName">
                                </div>
                            </div>
                            <div class="row m-3">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="inputEmail" name="email">
                                </div>
                            </div>
                            <div class="row m-3">
                                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="inputPassword" name="password">
                                </div>
                            </div>
                            <input type="submit" value="Sign Up" class="btn btn-primary mb-3" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<div class="text-center">
    <h1 class="display-4">Welcome To my Website</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


