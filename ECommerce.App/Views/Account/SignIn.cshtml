<div class="centered-form">

    <!-- ... (form content) ... -->
    <h5>@ViewData["Title"]</h5>
    @using (Html.BeginForm("Authenticate", "Account", FormMethod.Post))
    {
        <div class="form-group cubic-input">

            <label for="Email">Email</label>
            <input type="email" id="Email" name="userName" class="form-control" placeholder="name@gmail.com" required />
        </div>
        <div class="form-group cubic-input">
            <label for="Password">Password</label>
            <input type="password" id="Password" name="password" class="form-control " required />
        </div>
        <div class="form-group">
            <a href="/ForgotPassword" class="forgot-password-link">Forgot Password?</a>
        </div>
        <div class="form-group">
            <a href="/ForgotPassword" class="forgot-password-link">Already have an account?</a>
        </div>
        <button type="submit" class="btn btn-primary cubic-button">Sign In</button>

    }


</div>


